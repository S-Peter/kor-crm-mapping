<%= form_tag({controller: "welcome", action: "mapKorKind"}, method: "get") do %>
<table>
	<tr>
		<td>Kor Kind:</td>
		<td><%= @kind.name %></td>
	</tr>
	<tr>
		<td><%= label_tag(:crmc, "CRM class:") %></td>
		<td>
			<%= select_tag :crmc, options_from_collection_for_select(@crmClasses, :number, :label) %>
		</td>
	</tr>
	<tr>
		<td>
			<%= submit_tag("OK") %>
		</td>
	</tr>
</table>
<% end %>
	
	
  