<h1>Listing Relationships</h1>
 
<table>
  <tr>
    <th>ID</th>
	<th>Relation</th>
    <th>Domain</th>
	<th>Range</th>
  </tr>
 
  <% @relationships.each do |relationship| %>
    <tr>
      <td><%= relationship.id %></td>
      <td><%= relationship.relation.name %></td>
	  <td><%= relationship.domain.name %></td>
	  <td><%= relationship.range.name %></td>
    </tr>
  <% end %>
</table>
<% end %>
